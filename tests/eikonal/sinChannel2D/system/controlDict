FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     eikonalFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         1;

deltaT          1;

writeControl    timeStep;

writeInterval   1;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

libs (
    "libOpenFOAM.so"
);

functions
{
//     #includeFunc    residuals

    volAveragedd
    {
        type            volFieldValue;

        libs            ("libfieldFunctionObjects.so");

        writeControl    writeTime;

        log             true;
        writeFields     true;

        regionType      cellZone;
        name            set0;

        operation       volAverage;
        fields
        (
            d
        );
    }

    distanceField1
    {
        type    distanceField;
        libs    ("libdistanceFieldFunctionObject.so");

        writeControl    writeTime;

        log             true;
        writeFields     true;

        regionType      cellZone;
        name            set0;

        field   s;
        patches (bottom top);

        fields
        (
            s
        );
    }
}
